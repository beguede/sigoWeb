@model SigoWeb.Models.NormaModel

@{
    ViewBag.Title = "Norma";
    ViewBag.SubTitle = "Exluir a norma";
}

<div style="margin-bottom: 50px">
    <h3>@ViewBag.Title</h3>
    <span>@ViewBag.SubTitle</span>
</div>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="form-row">
            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
                @Html.LabelFor(model => model.Codigo, new { @class = "required" })
                @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
                @Html.LabelFor(model => model.DataPublicacao, new { @class = "required" })
                @Html.TextBoxFor(model => model.DataPublicacao, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @readonly = true })
                @Html.ValidationMessageFor(model => model.DataPublicacao, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
                @Html.LabelFor(model => model.Status, new { @class = "required" })
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
                @Html.LabelFor(model => model.Idioma, new { @class = "required" })
                @Html.EditorFor(model => model.Idioma, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.Idioma, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @Html.LabelFor(model => model.Titulo, new { @class = "beguede-required" })
                @Html.TextAreaFor(model => model.Titulo, htmlAttributes: new { @class = "form-control", @rows = 2, @readonly = true })
                @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
                @Html.LabelFor(model => model.Comite, new { @class = "beguede-required" })
                @Html.EditorFor(model => model.Comite, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.Comite, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
                @Html.LabelFor(model => model.Organismo, new { @class = "beguede-required" })
                @Html.EditorFor(model => model.Organismo, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.Organismo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @Html.LabelFor(model => model.Objetivo, new { @class = "beguede-required" })
                @Html.TextAreaFor(model => model.Objetivo, htmlAttributes: new { @class = "form-control", @rows = 5, @readonly = true })
                @Html.ValidationMessageFor(model => model.Objetivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-footer beguede-btn-right">
            <button onclick="location.href='@Url.Action("Index")'" type="button" class="btn btn-secondary"> Cancelar </button>
            <button type="submit" class="btn btn-danger"> Excluir </button>
        </div>
    }
</div>

@section Scripts {
    <script type="text/javascript">

        $(document).ready(function ($) {

        });

    </script>
}